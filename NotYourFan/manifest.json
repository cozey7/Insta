{
  "manifest_version": 3,
  "name": "Instagram Follower Checker",
  "version": "1.0",
  "description": "Compare followers and following on Instagram",
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["*://www.instagram.com/*"]
}
